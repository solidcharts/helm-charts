{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "helm-values"
  ],
  "helm-values": {
    "managerFilePatterns": [
      "/^charts/.*values\\.yaml$/"
    ],
    "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?<prerelease>-[^@]*)?@(?<compatibility>.+)$",
    "extractVersion": "(?<version>[^@]+)@(?<sha>sha256:[a-f0-9]{64})",
    "rangeStrategy": "replace"
  },
  "packageRules": [
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "matchPackageNames": [
        "/^docker\\.io\\/.+/"
      ],
      "labels": [
        "dependencies",
        "renovate"
      ],
      "commitMessagePrefix": "[{{{ replace \"docker.io/\" \"\" packageName }}}]",
      "commitMessageAction": "chore(deps): update"
    },
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "labels": [
        "dependencies",
        "renovate"
      ],
      "commitMessagePrefix": "[{{{ packageName }}}]",
      "commitMessageAction": "chore(deps): update",
      "matchPackageNames": [
        "!/^docker\\.io\\/.+/"
      ]
    }
  ]
}
