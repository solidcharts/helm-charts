{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "helm-values",
    "custom.regex"
  ],
  "helm-values": {
    "managerFilePatterns": [
      "/^charts/.*values\\.yaml$/"
    ],
    "versioning": "semver",
    "rangeStrategy": "replace"
  },
  "bumpVersions": [
    {
      "filePatterns": [
        "/^({{#each (distinct (lookupArray upgrades \"packageFileDir\"))}}{{{.}}}{{#unless @last}}|{{/unless}}{{/each}})/Chart\\.(yaml|yml)$/"
      ],
      "matchStrings": ["version:\\s(?<version>[^\\s]+)"],
      "bumpType": "{{#if isPatch}}patch{{else}}minor{{/if}}"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update minio docker image references",
      "managerFilePatterns": [
        "/^charts\\/minio\\/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[0-9a-zA-Z._-]+)\"?"
      ],
      "depNameTemplate": "minio/minio",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update rabbitmq docker image references",
      "managerFilePatterns": [
        "/^charts\\/rabbitmq\\/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[0-9a-zA-Z._-]+)\"?"
      ],
      "depNameTemplate": "rabbitmq",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update thanos image references from quay.io",
      "managerFilePatterns": [
        "/^charts\\/thanos\\/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[0-9a-zA-Z._-]+)\"?"
      ],
      "depNameTemplate": "quay.io/thanos/thanos",
      "datasourceTemplate": "docker"
    }
  ]
}
